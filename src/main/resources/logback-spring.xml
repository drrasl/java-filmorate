<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Вывод в консоль -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Уровень логирования -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Для текущего пакета можно установить TRACE/DEBUG -->
    <logger name="ru.yandex.practicum.filmorate" level="TRACE"/>
</configuration>